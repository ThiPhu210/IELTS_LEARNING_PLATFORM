<%= form_with model: [:admin, @teacher], local: true, multipart: true do |f| %>

  <div class="form-group">
    <%= f.label :full_name, "Họ tên" %>
    <%= f.text_field :full_name, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, "Ảnh đại diện" %>
    <%= f.file_field :avatar, accept: "image/*" %>
  </div>

  <hr>

  <%= f.fields_for :teacher_profile do |tp| %>
    <div class="form-group">
      <%= tp.label :expertise, "Chuyên môn" %>
      <%= tp.text_field :expertise %>
    </div>

    <div class="form-group">
      <%= tp.label :experience_years, "Số năm kinh nghiệm" %>
      <%= tp.number_field :experience_years %>
    </div>

    <div class="form-group">
      <%= tp.label :bio, "Giới thiệu" %>
      <%= tp.text_area :bio %>
    </div>
  <% end %>

  <%= f.submit "Lưu", class: "btn-primary" %>
<% end %>
