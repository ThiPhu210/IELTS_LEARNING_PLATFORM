<div class="w-full relative flex overflow-x-hidden">
  <%= render "admin/shared/sidebar" %>

  <div class="ml-64">
    <div class="px-6 py-6 mx-auto w-full">

      <div class="bg-white shadow-xl rounded-lg">
        <div class="px-6 py-4 border-b">
          <h3 class="font-bold text-lg text-blueGray-700">
            Students List
          </h3>
        </div>

        <div class="block w-full overflow-x-auto">
          <table class="w-full border-collapse text-center">
            <thead class="bg-blueGray-100">
              <tr>
                <th class="px-6 py-3 text-xs uppercase font-bold text-blueGray-500">ID</th>
                <th class="px-6 py-3 text-xs uppercase font-bold text-blueGray-500">Full Name</th>
                <th class="px-6 py-3 text-xs uppercase font-bold text-blueGray-500">Email</th>
                <th class="px-6 py-3 text-xs uppercase font-bold text-blueGray-500">Courses</th>
                <th class="px-6 py-3 text-xs uppercase font-bold text-blueGray-500">Created At</th>
              </tr>
            </thead>

            <tbody>
              <% @students.each do |student| %>
                <tr class="hover:bg-blueGray-50">
                  <td class="px-6 py-4 text-sm"><%= student.id %></td>
                  <td class="px-6 py-4 text-sm font-semibold"><%= student.full_name %></td>
                  <td class="px-6 py-4 text-sm"><%= student.email %></td>
                  <td class="px-6 py-4 text-sm"><%= student.courses.count %></td>
                  <td class="px-6 py-4 text-sm">
                    <%= student.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>

    </div>
  </div>

</div>
