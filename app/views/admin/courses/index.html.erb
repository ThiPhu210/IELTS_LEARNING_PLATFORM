<!-- app/views/dashboard/index.html.erb --> 
<div class="flex"> 
<!-- Sidebar bên trái --> 
<div class="w-64 bg-gray-800 text-black min-h-screen"> 
<%= render "admin/shared/sidebar" %> 
</div>
<div class="flex-1 p-6">
<% @courses.each do |course| %>
  <div class="w-full mb-8">
    <!-- relative đặt ở toàn card -->
    <div class="flex flex-col bg-white shadow-lg rounded-lg overflow-hidden relative">
      
      <!-- Dropdown bám theo toàn card -->
      <div class="absolute top-4 right-4 z-20">
        <%= render "dropdown", course: course %>
      </div>

      <div class="flex flex-col lg:flex-row">
        
        <!-- Phần ảnh -->
        <div class="w-full lg:w-4/12">
          <div class="aspect-w-16 aspect-h-9">
            <% if course.thumbnail.attached? %>
              <%= image_tag course.thumbnail.variant(resize_to_fill: [400, 300]) %>
            <% else %>
              <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                No Image
              </div>
            <% end %>
          </div>
        </div>

        <!-- Phần nội dung -->
        <div class="w-full lg:w-8/12 p-6">
          <div class="pr-10">
            <h3 class="text-2xl font-semibold text-blueGray-700">
              <%= course.title %>
            </h3>

            <p class="mt-2 text-blueGray-500">
              Band <%= course.band_min %> - <%= course.band_max %> |
              <%= number_to_currency(course.price) %> |
              <span class="font-medium"><%= course.status %></span>
            </p>

            <p class="mt-3 text-blueGray-400">
              <%= truncate(course.description, length: 150) %>
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>
<% end %>
</div>