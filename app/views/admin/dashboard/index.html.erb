<div class="admin-dashboard">
  <h1 class="dashboard-title">ADMIN DASHBOARD</h1>
  <p class="subtitle">Tổng quan hệ thống</p>

  <div class="stats-grid">
    <div class="stat-card">
      <h3>Total Users</h3>
      <p class="number"><%= @total_users %></p>
    </div>

    <div class="stat-card">
      <h3>Teachers</h3>
      <p class="number"><%= @teachers_count %></p>
      <%= link_to "Quản lý", admin_teachers_path, class: "action-link" %>
    </div>

    <div class="stat-card">
      <h3>Students</h3>
      <p class="number"><%= @students_count %></p>
    </div>

    <div class="stat-card">
      <h3>Admins</h3>
      <p class="number"><%= @admins_count %></p>
    </div>

    <div class="stat-card">
      <h3>Courses</h3>
      <p class="number"><%= @courses_count %></p>
    </div>

    <div class="stat-card">
      <h3>Lessons</h3>
      <p class="number"><%= @lessons_count %></p>
    </div>
  </div>
</div>

<style>
.admin-dashboard {
  padding: 20px;
  font-family: sans-serif;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); 
  grid-template-rows: repeat(2, auto);  
  gap: 20px;
}


.stat-card {
  background-color: #fcfff2;
  padding: 100px;
  border-radius: 20px;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.stat-card h3 {
  margin-bottom: 10px;
  font-size: 30px;
  color: #333;
}

.stat-card .number {
  font-size: 40px;
  font-weight: bold;
  color: #111;
}

.action-link {
  display: inline-block;
  margin-top: 10px;
  color: #1d4ed8;
  text-decoration: underline;
}


.dashboard-title {
  font-weight: bold;     
  font-size: 50px;       
  text-transform: uppercase;
  margin-bottom: 10px;    
}



</style>

